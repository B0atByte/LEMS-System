# ========================================
# LEMS - Environment Configuration
# Copy this file to .env and update values
# ========================================

# Application Settings
APP_NAME="LEMS - Legal Enforcement Management System Bargainpoint"
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost/LEMS/public
APP_VERSION=1.0
APP_TIMEZONE=Asia/Bangkok

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=lems_db
DB_USERNAME=root
DB_PASSWORD=
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci

# Session Configuration
SESSION_LIFETIME=120
SESSION_NAME=LEMS_SESSION
SESSION_SECURE=false
SESSION_HTTPONLY=true
SESSION_SAMESITE=Lax

# Security
CSRF_TOKEN_NAME=csrf_token
PASSWORD_MIN_LENGTH=8

# File Upload Configuration
MAX_UPLOAD_SIZE=5242880
ALLOWED_IMAGE_EXTENSIONS=jpg,jpeg,png
UPLOAD_PATH=uploads/field_reports

# Pagination
ITEMS_PER_PAGE=20
MAX_PAGINATION_LINKS=5

# Logging
LOG_LEVEL=debug
LOG_PATH=storage/logs
LOG_MAX_FILES=30

# Export Configuration
EXPORT_TEMP_PATH=storage/cache
EXPORT_MEMORY_LIMIT=512M

# Google Maps API (Optional for GPS display)
GOOGLE_MAPS_API_KEY=

# Email Configuration (Future use)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_FROM_ADDRESS=noreply@lems.local
MAIL_FROM_NAME="LEMS System"
