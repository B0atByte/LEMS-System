{
    "name": "bargainpoint/lems",
    "description": "Legal Enforcement Management System - Enterprise Grade",
    "type": "project",
    "keywords": ["legal", "enforcement", "management", "field-operations"],
    "license": "proprietary",
    "version": "1.0.0",
    "require": {
        "php": "^8.2",
        "ext-pdo": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-gd": "*",
        "vlucas/phpdotenv": "^5.6",
        "phpoffice/phpspreadsheet": "^1.29",
        "phpoffice/phpword": "^1.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Core\\": "core/"
        },
        "files": [
            "app/Helpers/SecurityHelper.php",
            "app/Helpers/ValidationHelper.php",
            "app/Helpers/DateHelper.php",
            "app/Helpers/FileHelper.php",
            "app/Helpers/UrlHelper.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "post-install-cmd": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
